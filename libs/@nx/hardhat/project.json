{
  "name": "hardhat-nx",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/@nx/hardhat/src",
  "projectType": "library",
  "tags": ["plugins"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/@nx/hardhat",
        "main": "libs/@nx/hardhat/src/index.ts",
        "tsConfig": "libs/@nx/hardhat/tsconfig.lib.json",
        "assets": [
          "libs/@nx/hardhat/*.md",
          {
            "input": "./libs/@nx/hardhat/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./libs/@nx/hardhat/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./libs/@nx/hardhat",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./libs/@nx/hardhat",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/@nx/hardhat/jest.config.ts"
      }
    }
  }
}
